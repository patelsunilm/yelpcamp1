<% include ../partials/header %>
  
<!-- <h4><%= currentUser %></h4>  -->
 <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>welcome to yelpcamp</h1>
        <p>view our hand-picked campgrounds from all over the world</p>
        <p>
          <a class="btn btn-primary btn-large" href="/campgrounds/new">add new campgrounds</a>
        </p>
      </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% campgrounds.forEach(function(campgrounds){ %>
        <div class="col-md-4 col-sm-6">
          <div class="thumbnail">
          <img src="http://localhost:4000/upload/campgrounds/<%= campgrounds.image %>">
          <div class="caption">
              <h4><%= campgrounds.name  %></h4>
        </div>
          <p>
            <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">more info</a>
          </p>
        </div>
      </div>
        <% }); %>
    </div>
  </div>
  <% include ../partials/footer %>